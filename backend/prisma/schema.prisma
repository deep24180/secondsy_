generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                         String         @id @default(auto()) @map("_id") @db.ObjectId
  supabaseId                 String         @unique
  email                      String
  firstName                  String?
  lastName                   String?
  createdAt                  DateTime       @default(now())
  conversationsAsParticipantA Conversation[] @relation("ParticipantA")
  conversationsAsParticipantB Conversation[] @relation("ParticipantB")
  sentMessages               Message[]      @relation("Sender")
}

model Product {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  title            String
  category         String
  subcategory      String
  price            Float
  condition        String
  description      String
  images           String[]
  email            String
  phone            String
  location         String
  deliveryPickup   Boolean
  deliveryShipping Boolean
  status           String   @default("Active")
  userId           String
  createdAt        DateTime @default(now())
}

model Conversation {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  productId        String
  participantAId   String
  participantA     User?     @relation("ParticipantA", fields: [participantAId], references: [supabaseId])
  participantBId   String
  participantB     User?     @relation("ParticipantB", fields: [participantBId], references: [supabaseId])
  lastMessageAt    DateTime?
  createdAt        DateTime  @default(now())
  messages         Message[]

  @@index([participantAId])
  @@index([participantBId])
  @@index([productId])
  @@unique([productId, participantAId, participantBId])
}

model Message {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  conversationId String       @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderId       String
  sender         User?        @relation("Sender", fields: [senderId], references: [supabaseId])
  content        String
  createdAt      DateTime     @default(now())

  @@index([conversationId, createdAt])
}

model SavedProduct {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  productId String
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([productId])
  @@unique([userId, productId])
}
